<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/item_root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/base"
        android:orientation="vertical"
        style="@style/item_base">

        <TextView
            android:id="@+id/header"
            style="@style/item_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/complexity_label"
            android:text="@string/complexity"
            style="@style/item_footer"
            app:layout_constraintBottom_toBottomOf="@id/complexity_value"
            app:layout_constraintEnd_toStartOf="@id/complexity_value"/>

        <TextView
            android:id="@+id/complexity_value"
            style="@style/item_footer"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

