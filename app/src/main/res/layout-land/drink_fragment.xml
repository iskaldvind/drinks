<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/drink_root"
    android:paddingStart="@dimen/wide_padding"
    android:paddingEnd="@dimen/wide_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/wide_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/description_container">

        <ImageView
            android:id="@+id/image"
            style="@style/drink_image"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/drink_image_description"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/description_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/drink_image_margin_half"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_container"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/name"
            style="@style/drink_name"/>

        <TextView
            android:id="@+id/glass"
            style="@style/drink_glass"/>

        <LinearLayout
            android:id="@+id/ingredients_container"
            style="@style/drink_ingredients_container">

            <TextView
                android:id="@+id/ingredients"
                style="@style/drink_ingredients"/>

            <TextView
                android:id="@+id/amounts"
                style="@style/drink_amounts"/>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            style="@style/drink_description"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>